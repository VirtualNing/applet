/* pages/home/index.wxss */
.search{
  display: flex;
  flex-direction: row;
  height: 60rpx;
  align-items: center;
}
.search-input{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5rpx;
  background-color: #ffffff;
  height: 100%;
  width: 80%;
  border-radius: 10rpx;
}
.search-text{
  padding: 10rpx 30rpx;
  background-color: #fff;
}
.scan{
  width: 10%;
  text-align: center;
}
.iconfont{
  font-size: 38.8rpx;
}
.content-scroll{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.indicator-wrap{
  width: 100%;
  height: auto;
  margin-bottom: 10rpx;
}
.swiper-item{
  display: block;
  width: 100%;
  height: 100%;
}
.big-logo{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  width: 100%;
  height: 400rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: #fff;
}
.logoinfo{
  width: 20%;
  text-align: center;
}
.logotext{
  display: block;
  font-size: 28rpx;
  color: rgb(148, 136, 136);
}
.page-margin{
  margin-top: 22rpx;
  background: #fff;
}
.page-row{
  position: relative;
  width: 100%;
  height: 100rpx;
}
.page-row text{
  position: absolute;
  right: 20rpx;
  top: 40rpx;
  font-size: 28rpx;
  color: rgb(148, 136, 136);
}
.page-row-img-wrapper{
  width: 200rpx;
  height: 100%;
}
.theme_img{
  display: inline-block;
  width: 100%;
  height: 100%;
}
.theme-scroll{
  display: flex;
  justify-content: space-between;
  white-space: nowrap;/**激活scroll-view 功能*/
  height: 360rpx;
  text-align: center;
}
.page-column{
  width: 300rpx;
  height: 300rpx;
  margin: 0 10rpx;
}
.page-column image{
  width: 100%;
  height: 100%;
}
.page-column-text{
  color: #D9002F;
  font-weight: bolder;
}
.page-list{
  justify-content: space-around;
  margin-top: 22rpx;
}
.page-list-row{
  width: 100%;
  line-height: 100rpx;
  background: #fff;
  font-size: 32rpx;
  color:#D9002F;
}
.list-flex{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding-top: 16rpx;
  width: 100%;
}
.items-wrapper{
  width: 48%;
  height: 556rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  background: #fff;
}
.items-img{
  width: 100%;
  height: 360rpx;
}
.items-img image{
  width: 100%;
  height: 100%;
}
.items-title{
  padding: 16rpx;
  font-size: 24rpx;
  color: #333;
}
.items-price{
  display: block;
  margin-top: 16rpx;
  color: #D9002F;
  font-size: 32rpx;
}
.buy-num{
  font-size: 24rpx;
  color: rgba(102, 102, 102, 0.562);
}