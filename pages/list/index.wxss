.prolist{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.product_item{
  padding: 6rpx 0;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.product_cover{
  padding: 0 30rpx;
  width: 520rpx;
  height: 240rpx;
  overflow: hidden;
}
.product_cover image{
  width: 100%;
  height: 100%;
  border: 0 none;
  vertical-align: top;
}
.product_info{
  min-height: 240rpx;
  box-sizing: border-box;
  padding: 0 20rpx 16rpx 20rpx;
  overflow: hidden;
  border-bottom: 2rpx solid #e8e8ed;
}
.product_title{
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  height: 80rpx;
  overflow: hidden;
  margin-top: 16rpx;
  color: #333;
  font-size: 28rpx;
}
.product_price{
  margin-top: 26rpx;
  display: inline-block;
  height: 36rpx;
  color: #e93b3d;
  min-width: 80rpx;
}
.product_other{
  overflow: hidden;
  height: 40rpx;
  padding: 12rpx 60rpx 4rpx 0;
  font-size: 24rpx;
  color: #999;
  box-sizing: border-box;
}
.product_comment{
  margin-right: 10rpx;
}
.product_deta{
  margin-right: 10rpx;
}